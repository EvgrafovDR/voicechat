<% provide(:title, "Редактирование профиля") %>
<h1>Редактирование профиля</h1>
<div class="row">
  <div class="span6 offset3">
    <%= form_for(@user) do |f| %>
      <%= render 'shared/error_messages' %>

      <%= f.label :status %>
      <%= f.text_field :status, value: @user.status%>

      <%= f.submit "Изменить статус", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>